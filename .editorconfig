root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true

[*.{js,ts}]
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[*.json]
indent_size = 2
indent_style = space

[*.sh]
indent_size = 2
indent_style = space

[*.{huskyrc,lintstagedrc,eslintrc,commitlintrc}]
indent_size = 2
indent_style = space

[COMMIT_EDITMSG]
max_line_length = 0

[{Makefile,**.mk}]
# Use tabs for indentation (Makefiles require tabs)
indent_style = tab
